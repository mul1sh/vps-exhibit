<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

    <CheckBox android:id="@+id/checkbox_select_officer"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:background="?android:attr/listChoiceIndicatorMultiple"
              android:button="@null"
              android:focusable="true"
              android:clickable="true"
    />

    <TextView
            android:id="@+id/txtOfficerName"
            android:layout_toEndOf="@id/checkbox_select_officer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_color_dark"
            android:textStyle="bold"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/txtOfficerServiceNo"
            android:layout_below="@id/txtOfficerName"
            android:layout_toEndOf="@id/checkbox_select_officer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_color_dark"
            android:textSize="14sp"
            />


</RelativeLayout>
